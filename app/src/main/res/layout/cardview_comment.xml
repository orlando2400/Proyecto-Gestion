<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageComment"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/todoperros" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/cristhel"
            app:cardCornerRadius="10dp"
            app:contentPadding="5dp" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp"
                android:text="nombre de usuario"
                android:textColor="@color/black"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageViewDeleteMyComment"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_basura" />

            <ImageView
                android:id="@+id/imageViewEditMyComment"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_edit"/>

            </LinearLayout>

            <EditText
                android:id="@+id/textViewComment"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:cursorVisible="false"
                android:editable="false"
                android:text="el comentario ira aqui" />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>