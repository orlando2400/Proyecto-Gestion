<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

<LinearLayout
    android:id="@+id/linearLayoutMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_linear_layout"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Nuevo mensaje"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/textViewDateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"/>

    <ImageView
        android:id="@+id/imageViewViewedMessage"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_gravity="bottom"/>

    <ImageView
        android:id="@+id/imageViewDeleteMyComment"
        android:layout_width="18dp"
        android:layout_height="19dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_basura" />

    <ImageView
        android:id="@+id/imageViewEditMyComment"
        android:layout_width="18dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_edit"/>
</LinearLayout>
</RelativeLayout>
